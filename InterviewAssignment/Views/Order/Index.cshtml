@model IEnumerable<InterviewAssignment.Models.Order>

@{
    ViewData["Title"] = "User Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">User List</h1>

<p class="text-end">
    <a asp-action="Createuser" class="btn btn-success mb-3">Create New User</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-center">
                        <a asp-action="Edituser" asp-route-id="@item.Order_id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Detailuser" asp-route-id="@item.Order_id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Deleteuser" asp-route-id="@item.Order_id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
