@model IEnumerable<InterviewAssignment.Models.OrderDetail>

@{
    ViewData["Title"] = "Index Fruits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Fruits List</h1>

<p class="text-end">
    <a asp-action="Createfruits" class="btn btn-success mb-3">Create New</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FruitName)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FruitName)
                    </td>
                    <td class="text-center">
                        <a asp-action="Editfruits" asp-route-id="@item.OrderDetail_id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Detailfruits" asp-route-id="@item.OrderDetail_id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Deletefruits" asp-route-id="@item.OrderDetail_id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
